<% if current_user && current_user.admin %>
  <%= link_to '+ Add category', new_category_path, class: "btn btn-outline-dark mt-4 ml-3 mb-4" %>
<% end %>
<div class="container">
  <div class="row">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "categories-card" do %>
        <div class="col-md-6 col-xs-12 mb-3">
          <div class="exp-card-head mt-4">
            <div class="card-style-category">
              <h4><%= category.title %></h4>
              <% if category.photo.attached? %>
                  <%= cl_image_tag category.photo.key, height: 400, width: 500, crop: :fill, class: "card-photo" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
