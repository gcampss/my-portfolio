<div class=show-page-container>

  <h1><%= @category.title  %></h1>
  <div class="row"> 
  <% if notice.present? %>
    <%= notice.html_safe %>
  <% end %>



    <div class="col-sm-12 col-md-4 col-lg-3"> 

    <% if @category.photo.attached? %>
    <%= cl_image_tag @category.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
    <% end %>
  

  
  <%= link_to 'Back', categories_path(@categories) %>
    

  <%= link_to "Delete",
              category_path(@category.id),
              method: :delete,
              data: { confirm: "Are you sure?" } %>


   
  <%= link_to 'Edit category', edit_category_path(@category) %>

    </div>
  </div>
</div>