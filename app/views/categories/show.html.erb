 <div class="container">
  <div class="row"> 
        <% if notice.present? %>
          <%= notice.html_safe %>
          <% end %>
    <div class="col-md-12">
      <ul class="list-group">
        <% @category.posts.each do |post| %>
          <% if post.photos.attached? %>
            <div class="test-center"> 
              <h1><%= @category.title  %></h1>
              <%# <%= cl_image_tag post.photos.first.key, height: 600, width: 800, crop: :fill %> %>
                  
                
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                    <%= cl_image_tag post.photos.first.key, height: 600, width: 800, crop: :fill %>
                    </div>
                    <div class="carousel-item">
                      <%= cl_image_tag post.photos.second.key, height: 600, width: 800, crop: :fill %>
                    <%# </div>
                    <div class="carousel-item">
                     <%= cl_image_tag post.photos.third.key, height: 600, width: 800, crop: :fill %> 
                    </div> %>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                  <li class="list-group-item"><%= post.title%></li>
                  <li class="list-group-item"><%= post.description %></li> 
                </div>
            </div> 
              <% else %>
              <% end %>
                      <%= link_to "Remove",
                                    category_post_path(@category, post),
                                    method: :delete,
                                    data: { confirm: "Are you sure?" } %>
                    <% end %>
                  </ul>

                    
                    <%= link_to 'Back', categories_path(@categories) %>
                      

                    <%= link_to "Delete category",
                                category_path(@category.id),
                                method: :delete,
                                data: { confirm: "Are you sure?" } %>


                    <%= link_to 'Add new photo', new_category_post_path(@category) %>
                    <%= link_to 'Edit category', edit_category_path(@category) %>

    </div>
  </div>
</div>