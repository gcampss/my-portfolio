
<%= link_to '<- Back', categories_path(@categories) %>

<div class="container h-100 ">
  <div class="row h-100 ">
    <div class="col-md-12 text-center">
        <div class="category-header">
          <h1><%= @category.title  %></h1>
          <%= link_to '+ Add new photo', new_category_post_path(@category) %>
        </div>
      <div class="test-center">
        <% if @photos.present? %>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"  data-interval="false" data-interval="500">
            <ol class="carousel-indicators">
              <li data-target="#" data-slide-to="0" class="active"></li>
              <li data-target="#" data-slide-to="1"></li>
              <li data-target="#" data-slide-to="2"></li>
              <li data-target="#" data-slide-to="3"></li>
              <li data-target="#" data-slide-to="4"></li>
              <li data-target="#" data-slide-to="5"></li>
              <li data-target="#" data-slide-to="6"></li>
              <li data-target="#" data-slide-to="7"></li>
              <li data-target="#" data-slide-to="8"></li>
              <li data-target="#" data-slide-to="9"></li>

              <%# <li data-target="#carouselExampleIndicators" data-slide-to="2"></li> %>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= cl_image_tag @photos.first[:photo].key, class:"image-slider", crop: :fill %>
                <div class="carousel-caption d-none d-md-block">
                  <h5><%= @photos.first[:title] %></h5>
                  <p><%= @photos.first[:description] %></p>
                </div>
              </div>
              <% @photos[1..-1].each do |photo| %>
                  <div class="carousel-item">
                    <%= cl_image_tag photo[:photo].key, class:"image-slider", crop: :fill %>
                    <div class="carousel-caption d-none d-md-block">
                      <h5><%= photo[:title] %></h5>
                      <p><%= photo[:description] %></p>
                    </div>
                  </div>
              <% end %>
              <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
        <% end %>
      </div>
        <div class="crud-links">
          <% if current_user && current_user.admin %>
            <%= link_to "Delete category", category_path(@category.id), method: :delete, data: { confirm: "Are you sure?" } %>
            <%= link_to 'Add new photo', new_category_post_path(@category) %>
            <%= link_to 'Edit category', edit_category_path(@category) %>
          <%end %>
        </div>
    </div>
  </div>
</div>

